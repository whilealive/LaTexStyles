\ProvidesPackage{tikzStyle}

\RequirePackage{tikz}
\usetikzlibrary{calc,angles,intersections,arrows.meta}

% Shift previously defined coordinates. Usage:
% --------------------------------------------
% \begin{scope}[every coordinate/.style={shift={(x,y)}}]
%   \draw ([c]A) -- ([c]B);
% \end{scope}
% ------
\tikzset{c/.style={every coordinate/.try}}

% circle arc around point
\tikzset{partial ellipse/.style args={#1:#2:#3}{insert path={+ (#1:#3) arc (#1:#2:#3)}}}

\pgfkeys
{%
  tikzStyle/.is family, /tikzStyle,
  default/.style={node text=, node pos=, angle radius=5mm, color=black},
  node text/.estore in=\tikzStyleNoteText,
  node pos/.estore in=\tikzStyleNotePos,
  angle radius/.estore in=\tikzStyleAngleRad,
  color/.estore in=\tikzStyleColor
}

% right angle, german style
% \RechterWinkel[]{A--B--C};
\newcommand*{\RechterWinkel}[2][]
{%
  \pgfkeys{/tikzStyle, default, #1}%
  \draw pic[pic text=., draw, angle radius=\tikzStyleAngleRad, angle eccentricity=.55, color=\tikzStyleColor] {angle=#2};
}

% Point that won't get scaled
% args: #1 = optional key-value (node text / node pos), #2 = coordinates
\newcommand*{\Point}[2][]
{%
  \pgfkeys{/tikzStyle, default, #1}%
  \draw[fill, color=\tikzStyleColor] (#2) 
    node[circle,fill, inner sep=1.3pt] {}
    node[\tikzStyleNotePos] {\tikzStyleNoteText};
}

